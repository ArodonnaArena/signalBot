# Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
WEBHOOK_URL=https://yourdomain.com/webhook
PORT=3000

# Database Configuration
DB_URL=postgres://username:password@localhost:5432/telegram_crypto_bot

# Payment Configuration
TELEGRAM_PROVIDER_TOKEN=your_provider_token_from_botfather_or_stripe

# Premium Channel Configuration
PREMIUM_CHANNEL_ID=@yourprivatechannel
PREMIUM_CHANNEL_INVITE_LINK=https://t.me/+your_private_channel_invite_link

# Referral Configuration
REFERRAL_REWARD_DAYS=3

# Security
JWT_SECRET=your_jwt_secret_for_admin_auth

# Admin Configuration
ADMIN_TELEGRAM_ID=your_telegram_user_id

# Environment
NODE_ENV=development

# Optional: InviteMember Integration
INVITEMEMBER_API_KEY=your_invitemember_api_key
INVITEMEMBER_WEBHOOK_SECRET=your_invitemember_webhook_secret

# MongoDB signals (integration with signal_bot)
MONGODB_URI=
MONGODB_DB_NAME=signal_bot_db
SIGNALS_COLLECTION=ai_signals
SIGNAL_POLL_INTERVAL_MS=60000
